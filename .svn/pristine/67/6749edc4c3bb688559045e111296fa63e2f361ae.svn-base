html,
body {
	background-color: #F9F9F9;
}

div.login-center{
	width: 340px;
	margin: 40px auto;		
}

form.login{
	background-color: #FFF;
	border: 1px solid #D8DEE2;
	border-radius: 6px;
	margin-top: 15px;
	padding: 20px;	
}

form.login label{
	margin: 0px;
	font-weight: 500;
}

form.login div{
	margin-bottom: 20px;
}

section.title{
	margin-top: 15px;
	font-size: 18pt;
	text-align: center;
}

.btn-green{
	color: #FFF;	
	text-shadow: -1px -1px 0px #2980b9;
	border: 1px solid #2980b9;
    background: #89dc6c; /* For browsers that do not support gradients */
    background: -webkit-linear-gradient(#4dafe2, #2980b9); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(#4dafe2, #2980b9); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient(#4dafe2, #2980b9); /* For Firefox 3.6 to 15 */
    background: linear-gradient(#4dafe2, #2980b9); /* Standard syntax */
}

.btn-green:hover{
	color: #FFF;
	text-shadow: -1px -1px 0px #2573a6;
	border: 1px solid #2573a6;
    background: #89dc6c; /* For browsers that do not support gradients */
    background: -webkit-linear-gradient(#459cca, #2573a6); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(#459cca, #2573a6); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient(#459cca, #2573a6); /* For Firefox 3.6 to 15 */
    background: linear-gradient(#459cca, #2573a6); /* Standard syntax */
}
